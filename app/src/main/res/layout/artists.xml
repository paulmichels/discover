<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:text="@string/favourite_artists"/>

    <include
        android:id="@+id/artist_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/artist_item"
        android:layout_marginTop="80dp"/>

    <include
        android:id="@+id/artist_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/artist_item"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/artist_item_1"/>

    <include
        android:id="@+id/artist_item_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/artist_item"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/artist_item_2"/>

    <include
        android:id="@+id/artist_item_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/artist_item"
        android:layout_marginTop="280dp"/>

    <include
        android:id="@+id/artist_item_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/artist_item"
        android:layout_toEndOf="@+id/artist_item_4"
        android:layout_marginStart="25dp"
        android:layout_marginTop="280dp"/>

    <include
        android:id="@+id/artist_item_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/artist_item"
        android:layout_toEndOf="@+id/artist_item_5"
        android:layout_marginStart="25dp"
        android:layout_marginTop="280dp"/>

</RelativeLayout>